---


<HeadingTitles heading="GalerÃ­a" />
<section class="gallery container">
	<picture class="gallery_massonry" id="my-gallery">
		{pictures.map((image: { image: string, width: number, height: number}) => {
			return <a 
			class="gallery_link" 
			href={image.image}
			target="_blank" 
			data-pswp-width={image.width} 
			data-pswp-height={image.height} >
			<img class="gallery_image" src={image.image} alt="" loading="lazy">
		</a>
		})}
	</picture>
</section>

<script>
	import PhotoSwipeLightbox from 'photoswipe/lightbox';
	const lightbox = new PhotoSwipeLightbox({
		gallery: '#my-gallery',
		children: 'a',
		pswpModule: () => import('photoswipe')
	});
	lightbox.init();
</script>