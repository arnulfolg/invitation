---

import HeadingTitles from '../Heading-Titles/Heading-Titles.astro';
import ConfirmationForm from "./ConfirmationForm/ConfirmationForm";
import './confirmation.css'
---

<HeadingTitles heading="Confirmar asistencia" />
<section class="confirmation container">
	<ConfirmationForm client:only="react"/>
	<section class="confirmation_image">
		<video class="confirmation_gif" src="/videos/wedding-date.mp4" poster="/images/wedding-date.gif" autoplay loop muted playsinline preload="auto"></video>
	</section>
	<section class="confirmation_information">
		<p class="small">La confirmación se enviará por WhatsApp a la organizadora del evento: Keren Rivera.</p>
	</section>
</section>